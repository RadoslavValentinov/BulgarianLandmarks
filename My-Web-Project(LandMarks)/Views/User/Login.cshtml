@model LoginViewModel

<style>
    label{
        color:#fff;
        padding: 5px;
    }

    .text-center{
        font-family:Arial, Helvetica, sans-serif;
        font-style:italic;
        font-size:14px;
    }

    .text-center{
        margin-top:10px;
    }

    #login-submit{
        margin-top:30px;
        border-radius: 12px;
        padding:7px 80px 7px 80px;
    }
    form .text-center input{
        border-radius: 20px;
    }

    form #account hr {
        margin-bottom:30px;
    }
   
    #Title {
        font-family:Arial, Helvetica, sans-serif;
        font-size: 32px;
        text-align:center;
        color:#fff;
        margin-bottom:35px;
    }
    #account{
        border: 1px solid lightgray;
        border-radius: 20px;
        padding: 25px;
        margin-top:30px;
        background: #2828a1;
        background: radial-gradient(circle,rgba(40, 40, 161, 1) 0%, rgba(50, 56, 227, 1) 77%);
    }

    #login-submit{
        background-color: #ffa000;
        font-family:Arial, Helvetica, sans-serif;
        font-weight:bold;
        margin-bottom: 30px;
    }

    #login-submit:hover{
        transition:ease-in-out;
        border:2px solid #fff;
    }

    footer {
        display: none;
    }
</style>

@{
    ViewData["Title"] = "Sign In";
}

<div class="row">
    <div class="col-md-4 offset-md-5">
        <section>
            
            <form id="account" method="post">
                
                <h1 id="Title">@ViewData["Title"]</h1>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Password" class="form-label"></label>
                    <input asp-for="@Model.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-primary">Sign In</button>
                </div>
            </form>
        </section>
    </div>
</div>