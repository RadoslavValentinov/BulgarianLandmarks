@using MyWebProject.Core.Models.PictureModel
@model IEnumerable<PicturesViewModel>


<head>
    <link rel="stylesheet" href="~/css/CustomCSSUserPicture.css" asp-append-version="true" />
</head>


@if (Model.Count() == 0 || Model == null)
{
    <h1>Все още нямате добавени снимки...</h1>
}
else
{
    <h1>Вашата колекция от снимки</h1>


    @foreach (var item in Model)
    {
        <img id="resize" src="@item.UrlImgAddres" width="270" height="200" />
    }

}




