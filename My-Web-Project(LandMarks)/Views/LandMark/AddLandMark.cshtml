@model AddLandMarkViewModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <input type="hidden" asp-for="@Model.Name" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Title...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <input asp-for="Description" class="form-control" placeholder="Address...">
                <span asp-validation-for="Description" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Rating"></label>
                <textarea asp-for="Rating" rows="4" class="form-control" placeholder="Two bedrooms..."></textarea>
                <span asp-validation-for="Rating" class="small text-danger"></span>
            </div>   
            <div class="form-group">
                <label asp-for="Categories"></label>
                <select asp-for="Categories" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="Categories" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>
