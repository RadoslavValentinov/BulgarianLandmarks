@using MyWebProject.Core.Models.Town;
@model TownViewModelAll

<head>
    <link rel="stylesheet" href="~/css/AllTownsCss.css" asp-append-version="true" />
</head>

@{
    var land = Model.cultural_Events;
}

@foreach (var pic in land)
{

    <div id="containerTown">
        <img src="@pic.ImageURL" alt="Town" />
        <div id="texts">
            <h4>@pic.Name</h4>
            <p>@pic.Description.Substring(0,150)...</p>
            <a class="btn btn-primary" asp-area="" asp-controller="CultureEvent" asp-action="EventByTownId" asp-route-id="@pic.Id" method="post">Към Събитието</a>
        </div>
    </div>
}
