@using MyWebProject.Core.Models.Category;
@model IEnumerable<CategoryViewModel>


<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border: 1px solid black;
            width: 90%;
        }

        th {
            background-color: white;
            text-align: center;
            padding: 8px;
            border: 1px solid black;
        }

        td {
            border: 1px solid black;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: white;
        }

        #edit {
            padding: 5px 45px 5px 45px;
            background-color: rgb(255, 219, 88);
            color: black;
            margin-right: 40px;
            position: relative;
            right: -340px;
        }

        #deleteBtn {
            position: relative;
            right: -340px;
            padding: 5px 45px 5px 45px;
            background-color: red;
            color: black;
        }

        #create {
            padding-bottom: 20px;
        }

            #create a {
                text-decoration: none;
                font-family: Arial, Helvetica, sans-serif;
                font-size: 18px;
                color: deepskyblue;
            }
    </style>
</head>


<div id="create">
    <a asp-area="Administrator" asp-controller="OptionCategory" asp-action="Create">Create new category</a>
</div>

<table>
    <tr>
        <th>Id</th>
        <th>Categoty Name</th>
        <th>Categoty Options</th>
    <tr />
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>
                    @Html.AntiForgeryToken()
                <a id="edit" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionCategory" asp-action="Edit" class="btn btn-outline-warning">Edit</a>
                <a id="deleteBtn" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionCategory" asp-action="Delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }

</table>