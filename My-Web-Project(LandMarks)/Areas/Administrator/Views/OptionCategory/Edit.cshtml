@using MyWebProject.Core.Models.Category;
@model CategoryViewModel

<head>
    <link rel="stylesheet" href="~/css/Admin Area css/CategoryEditCSS.css">
</head>

<h2>Change category</h2>

@using (Html.BeginForm("Edit", "OptionCategory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Change Name</label>
        <input asp-for="Name" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update Name</button>
}