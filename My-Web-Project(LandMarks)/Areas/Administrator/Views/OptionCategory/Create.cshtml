@using MyWebProject.Core.Models.Category;
@model CreateCategoryViewModel

<head>
    <style>
        h2 {
            text-align: center;
            position: relative;
            left: 0px;
            padding-bottom: 30px;
            font-family: Arial, Helvetica, sans-serif;
        }

        .mb-3 input {
            width: 400px;
            position: relative;
            left: 450px;
        }

        .mb-3 label{
            position:relative;
            left:450px;
        }

        .mb-3 span{
            position:relative;
            left:450px;
        }

        .btn {
            position: relative;
            left: 560px;
            margin-top: 20px;
            margin-bottom: 30px;
            padding: 5px 60px 5px 60px;
        }
    </style>
</head>


<h2>Create new Category</h2>
@using (Html.BeginForm("Create", "OptionCategory", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="@Model.Name" class="form-label">Category Name</label>
        <input asp-for=@Model.Name class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Create</button>
}
   