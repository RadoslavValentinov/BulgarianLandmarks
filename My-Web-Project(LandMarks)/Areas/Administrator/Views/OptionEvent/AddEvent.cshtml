@model CultureEventViewModelByTownId

<head>
    <link rel="stylesheet" href="~/css/Admin Area css/EventCSS/EventAddCSS.css">
</head>


<h2>Create new Event</h2>
<hr />

@using (Html.BeginForm("AddEvent", "OptionEvent", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" aria-required="true" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" aria-required="true" rows="6" cols="30"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Date" class="form-label">Date</label>
        <input asp-for="@Model.Date" class="form-control" type="date" aria-required="true" />
        <span asp-validation-for="@Model.Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Hour" class="form-label">Hour</label>
        <input asp-for="@Model.Hour" class="form-control" type="time" aria-required="true" />
        <span asp-validation-for="@Model.Hour" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.TownName" class="form-label">Town Name</label>
        <input asp-for="@Model.TownName" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.TownName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ImageURL" class="form-label">Image URL</label>
        <input asp-for="@Model.ImageURL" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> Create Event</button>
}


