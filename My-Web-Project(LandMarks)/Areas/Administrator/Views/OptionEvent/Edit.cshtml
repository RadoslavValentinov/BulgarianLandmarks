@model CultureEventViewModelByTownId


<head>
    <style>

        input {
            width: 400px;
            padding: 10px;
            margin: 10px;
        }

        h2 {
            text-align: center;
            font-family: Arial, Helvetica, sans-serif;
        }

        .mb-3 input {
            position: relative;
            width: 450px;
            left: 420px;
        }

        .mb-3 textarea {
            position: relative;
            width: 450px;
            left: 430px;
        }

        .mb-3 label {
            position: relative;
            width: 450px;
            left: 430px;
        }

        .mb-3 span {
            position: relative;
            width: 450px;
            left: 430px;
        }

        .btn {
            position: relative;
            left: 580px;
            padding: 10px 25px 10px 25px;
            margin-top: 20px;
        }


        #area {
            position: relative;
            left: 10px;
            width: 400px;
            height: 100px;
        }

    </style>
</head>


<h2>Update Info Event</h2>
<hr />


@using (Html.BeginForm("Edit", "OptionEvent", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Name</label>
        <input asp-for="Name" class="form-control" aria-required="true" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" aria-required="true" rows="6" cols="30"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Date" class="form-label">Date</label>
        <input asp-for="@Model.Date" class="form-control" type="date" aria-required="true" />
        <span asp-validation-for="@Model.Date" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.Hour" class="form-label">Hour</label>
        <input asp-for="@Model.Hour" class="form-control" type="time" aria-required="true" />
        <span asp-validation-for="@Model.Hour" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.TownName" class="form-label">Town Name</label>
        <input asp-for="@Model.TownName" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.TownName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="@Model.ImageURL" class="form-label">Image URL</label>
        <input asp-for="@Model.ImageURL" class="form-control" aria-required="true" />
        <span asp-validation-for="@Model.ImageURL" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary"> Update Event</button>
}