@model IEnumerable<LandMarkByUserAdded>

@{
    var all = new AddLandMarkViewModel();
}

<head>
    <link rel="stylesheet" href="~/css/All CSS file/LandMarkCustomCSS/CustomLandmarkAddByUser.css">
</head>


@if (Model.Count() == 0)
{
    <h1 id="title">No Land Marks to added</h1>
}
else
{
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Video Url</th>
            <th>image</th>
            <th>Options</th>
        <tr />
            @foreach (var item in Model)
            {
                all.Name = item.Name;
                all.Description = item.Description;
                all.VideoURL = item.VideoURL;
                all.VideoURL = item.ImageURL;

            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CategoryId</td>
                    @if (item.VideoURL != null)
                    {
                    <td><a href="@item.VideoURL">See Video</a></td>
                    }
                    else
                    {
                    <td></td>
                    }
                    @if (item.ImageURL != null)
                    {
                    <td><a href="@item.ImageURL">See Image</a></td>
                    }
                    else
                    {
                    <td></td>
                    }
                <td>
                        @Html.ActionLink("Add", "AddLandMarkByUser", "OptionLandMark", new AddLandMarkViewModel()
       {
           Name = item.Name,
           Description = item.Description,
           VideoURL = item.VideoURL,
           ImageURL = item.ImageURL,
           CategoryId = item.CategoryId
       }, new { id = "click" })

                </td>
            </tr>
            }
    </table>
}



