@model IEnumerable<AddLandMarkViewModel>



<head>
    <link rel="stylesheet" href="~/css/All CSS file/LandMarkCustomCSS/CustomLandmarkAddByUser.css">
</head>


@if (Model.Count() == 0)
{
    <h1 id="title">No Land Marks to added</h1>
}
else
{
    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Category</th>
            <th>Video Url</th>
            <th>image</th>
            <th>User</th>
            <th>Options</th>
        <tr />
            @foreach (var item in Model)
            {


            <tr>
                <td>@item.Name</td>
                <td>
                    <textarea>@item.Description></textarea>
                </td>
                <td>@item.CategoryId</td>
                    @if (item.VideoURL != null)
                    {
                    <td><a href="@item.VideoURL">See Video</a></td>
                    }
                    else
                    {
                    <td></td>
                    }
                    @if (item.ImageURL != null)
                    {
                    <td><a href="@item.ImageURL">See Image</a></td>
                    }
                    else
                    {
                    <td></td>
                    }

                <td>@item.UserName</td>
                <td>

                        @Html.ActionLink("Add", "AddLandMarkByUser", new
                            {
                                Name = item.Name,
                                Description = item.Description,
                                VideoURL = item.VideoURL,
                                ImageURL = item.ImageURL,
                                CategoryId = item.CategoryId,
                                UserName = item.UserName

                            })

                </td>
            </tr>
            }
    </table>
}