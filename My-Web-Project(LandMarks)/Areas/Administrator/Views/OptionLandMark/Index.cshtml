@model IEnumerable<LandMarkViewModelAll>


<head>
    <style>
        body {
          
        }

        table {
            font-family: arial, sans-serif;
            border: 1px solid black;
            width: 90%;
        }

        th {
            background-color: white;
            text-align: center;
            padding: 8px;
            border: 1px solid black;
        }

        td {
            border: 1px solid black;
            text-align: left;
            padding: 8px;
            font-family: Arial, Helvetica, sans-serif;
            white-space: nowrap;
            display: table-cell;
            vertical-align: inherit;
        }

        tr:nth-child(even) {
            background-color: white;
        }

        #edit {
            padding: 5px 45px 5px 45px;
            background-color: yellow;
            color: black;
            margin-right: 40px;
            position: relative;
            right: -10px;
        }

        #deleteBtn {
            position: relative;
            right: 5px;
            padding: 5px 45px 5px 45px;
            background-color: red;
            color: black;
        }

        #create {
            padding-bottom: 20px;
        }

            #create a {
                text-decoration: none;
                font-family: Arial, Helvetica, sans-serif;
                font-size: 18px;
                color: mediumseagreen;
            }

        #seen {
            text-decoration: none;
            color: cornflowerblue;
        }
    </style>
</head>


<div id="create">
    <a asp-area="Administrator" asp-controller="OptionLandMark" asp-action="AddLandMark">Create New LandMark</a>
</div>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Rating</th>
        <th>Town Name</th>
        <th>Category</th>
        <th>Video Url</th>
        <th>image</th>
        <th>Options</th>
    <tr />
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Rating</td>
            <td>@item.TownName</td>
            <td>@item.Category</td>
            @if (item.VideoUrl != null)
            {
                    <td><a href="@item.VideoUrl">See Video</a></td>
            }
            else
            {
               <td></td>
            }
               
                @*set all picture to see admin*@
            <td>@Html.ActionLink("See all picture","SlidePicture","OptionLandMark",new {@Id =item.Id})</td>
            <td>
                <a id="edit" class="btn btn-outline-warning" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionLandMark" asp-action="Edit">Edit</a>
                <a id="deleteBtn" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionLandMark" asp-action="Delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
</table>

