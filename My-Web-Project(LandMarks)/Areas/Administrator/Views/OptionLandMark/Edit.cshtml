@model LandMarkViewModelAll

<head>
    <style>

        input {
            width: 400px;
            padding: 10px;
            margin: 10px;
        }

        h2 {
            text-align: center;
            font-family: Arial, Helvetica, sans-serif;
        }

        #formCreate {
            position: relative;
            left: 350px;
        }

        .btn {
            position: relative;
            left: 100px;
            bottom: -10px;
            margin: 20px;
        }

        #area {
            position: relative;
            left: 10px;
            width: 400px;
            height: 100px;
        }

        label {
            position: relative;
            left: 10px;
            font-family:Arial, Helvetica, sans-serif;
            color:dimgrey
        }

        form {
            height: 600px;
        }

    </style>
</head>


<h2>Changes LandMark</h2>
<hr />


<form id="formCreate" method="post" asp-area="Administrator" asp-controller="OptionLandMark" asp-action="Edit">

    <label>Changes Name</label>
    <br />
    <input class="form" autocomplete="on"  asp-for="@Model.Name" />
    <br />
    <label>Changes description</label>
    <br />
    <textarea id="area" class="form" autocomplete="on"  asp-for="@Model.Description"></textarea>
    <br />
    <label>Changes rating</label>
    <br />
    <input class="form" autocomplete="on" asp-for="@Model.Rating" />
    <br />
    <label>Changes Town name</label>
    <br />
    <input class="form" autocomplete="on"  asp-for="@Model.TownName" />
    <br />
    <label>Changes Video Url</label>
    <br />
    <input class="form" autocomplete="on"  asp-for="@Model.VideoUrl" />
    <br />
  
    <button type="submit" class="btn btn-primary"> Change LandMark </button>
    <br />
</form>

