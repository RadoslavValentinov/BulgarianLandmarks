@using MyWebProject.Core.Models.PictureModel;
@using MyWebProject.Infrastructure.Data.Models;
@model IEnumerable<AddPictureByUser>


<head>
    <link rel="stylesheet" href="~/css/CustomAddPicturebyUser.css">
    <link rel="stylesheet" href="~/js/CustomMessageByUser.js">
</head>


@if (Model.Count() == 0)
{
    <h1 class="title">No Pictures to Added</h1>
}
else
{
    <table>
        <tr>
            <th>Image Url</th>
            <th>User</th>
            <th>Options</th>

        <tr />
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    <img src="@item.UrlImgAddres" width="300" height="200" />
                </td>
                <td>@item.UserName</td>
                <td>
                        @Html.ActionLink("Add Picture", "AddPictureByUser", "OptionPictures", new AddPictureViewModel() { UrlImgAddres = item.UrlImgAddres, UserName = item.UserName }, new { id = "click" })
                </td>
            </tr>
            }
    </table>
}

