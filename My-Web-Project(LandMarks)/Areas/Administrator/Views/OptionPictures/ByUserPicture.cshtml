@using MyWebProject.Core.Models.PictureModel;
@using MyWebProject.Infrastructure.Data.Models;
@model IEnumerable<AddPictureByUser>


<head>
    <link rel="stylesheet" href="~/css/CustomCSSUserPicture.css">
</head>


@if (Model.Count() == 0)
{
    <h1 id="title">No Pictures to Added</h1>
}
else
{

    <div class="row">
        @foreach (var item in Model)
        {
          
            <div id="cardsPictures" class="col">
                @if (item.PictureData != null && item.PictureData.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PictureData)" alt="User Picture" />
                }
                else
                {
                    <img src="@item.UrlImgAddres" alt="User Picture" />
                }

                <h4>@item.UserName</h4>
                <hr />

              

                @* @Html.ActionLink("Add Picture", "AddPictureByUser", "OptionPictures",
                         new { Id = item.Id }, htmlAttributes: null) *@

                <a id="deleted" asp-route-id="@item.Id" asp-controller="OptionPictures" asp-action="AddPictureByUser" asp-route-id="@item.Id">Add Picture</a>
                <a id="deleted" asp-route-id="@item.Id"  asp-controller="OptionPictures" asp-action="DeleteByUser">Delete</a>
            </div>
        }
    </div>
}

