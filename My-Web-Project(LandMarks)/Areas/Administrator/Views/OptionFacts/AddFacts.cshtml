@using MyWebProject.Core.Models.FactOfBulgaria;
@model FactOfCountry

<head>
    <link rel="stylesheet" href="~/css/Admin Area css/FactsCSS/AddFactsCSS.css">
</head>



<h2>Add New Fact</h2>
<hr />


@using (Html.BeginForm("AddFacts", "OptionFacts", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="@Model.Description" class="form-label">Description</label>
        <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="12" cols="45"></textarea>
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>

    <div id="formSelect">
        <label asp-for="@Model.CategoryId" class="form-label">Choises Category</label>
        <select asp-for="@Model.CategoryId" class="form-control">
            @foreach (var category in Model.Category)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary"> Add Fact </button>
}