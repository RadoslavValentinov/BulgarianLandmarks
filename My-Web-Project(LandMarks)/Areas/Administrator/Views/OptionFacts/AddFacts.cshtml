@using MyWebProject.Core.Models.FactOfBulgaria;
@model FactOfCountry

<head>
    <style>

        .mb-3 textarea {
            position: relative;
            width: 450px;
            left: 420px;
        }

        .mb-3 label {
            position: relative;
            left: 420px;
        }

        .mb-3 span {
            position: relative;
            left: 420px;
        }

        
        h2 {
            text-align: center;
        }

        #formSelect {
            width: 450px;
            position: relative;
            left: 420px;
        }

        #formSelect label{
            position: relative;
            left: -2px;
        }

        .btn {
            position: relative;
            left: 580px;
            margin-top: 10px;
            padding:10px 25px 10px 25px;
        }

    </style>
</head>



<h2>Add New Fact</h2>
<hr />


@using (Html.BeginForm("AddFacts", "OptionFacts", FormMethod.Post))
{
    @Html.AntiForgeryToken()
 
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <textarea asp-for="@Model.Description" class="form-control" aria-required="true" rows="12" cols="45"></textarea>
            <span asp-validation-for="@Model.Description" class="text-danger"></span>
        </div>

        <div id="formSelect" class="mb-3">
            <label asp-for="CategoryId" class="form-label">Choises Category</label>
            <select asp-for="CategoryId" class="form-control">
                @foreach (var category in Model.Category)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="Category" class="text-danger"></span>
        </div>



        <button type="submit" class="btn btn-primary"> Add Fact </button>
}