@using MyWebProject.Core.Models.FactOfBulgaria;
@model IEnumerable<AllFactsViewModel>


<head>
    <link rel="stylesheet" href="~/css/Admin Area css/FactsCSS/FactsIndexPage.css">
</head>


<div id="create">
    <a asp-area="Administrator" asp-controller="OptionFacts" asp-action="AddFacts">Create New Fact</a>
</div>

<table>
    <tr>
        <th>Id</th>
        <th>description</th>
        <th>Categoty</th>
        <th>Options</th>
    <tr />
        @foreach (var item in Model)
        {
          <tr>
            <td>@item.Id</td>
            <td>@item.Description</td>
            <td>@item.Category</td>
            <td>
                <a id="edit" class="btn btn-outline-warning" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionFacts" asp-action="EditFact">Edit</a>
                <a id="deleteBtn" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionFacts" asp-action="Delete" class="btn btn-danger">Delete</a>
            </td>
          </tr>
        }

</table>