@model IEnumerable<JourneyGetAllViewModel>


<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border: 1px solid black;
            width: 90%;
        }

        th {
            background-color: white;
            text-align: center;
            padding: 8px;
            border: 1px solid black;
        }

        td {
            border: 1px solid black;
            text-align: left;
            padding: 8px;
            font-family: Arial, Helvetica, sans-serif;
            white-space: nowrap;
            display: table-cell;
            vertical-align: inherit;
        }

        tr:nth-child(even) {
            background-color: white;
        }

        #edit {
            padding: 5px 45px 5px 45px;
            background-color: rgb(255, 219, 88);
            color: black;
            margin-right: 40px;
            position: relative;
            right: -10px;
        }

        #deleteBtn {
            position: relative;
            right: 5px;
            padding: 5px 45px 5px 45px;
            background-color: red;
            color: black;
        }

        #create {
            padding-bottom: 20px;
        }

            #create a {
                text-decoration: none;
                font-family: Arial, Helvetica, sans-serif;
                font-size: 18px;
                color: deepskyblue;
            }

        #seen {
            text-decoration: none;
            color: coral;
        }
    </style>
</head>


<div id="create">
    <a asp-area="Administrator" asp-controller="OptionJourney" asp-action="Create">Create new Event</a>
</div>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Rating</th>
        <th>StartDate</th>
        <th>Day</th>
        <th>Prace</th>
        <th>image</th>
        <th>Options</th>
    <tr />
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.Rating</td>
            <td>@item.StartDate</td>
            <td>@item.Day</td>
            <td>@item.Price лв.</td>
                @{
                    var set = @item.pictures.FirstOrDefault(x => x.JourneyId == item.Id);
                }

            <td><a id="seen" href="@set?.UrlImgAddres">See image</a></td>
            <td>
                <a id="edit" class="btn btn-outline-warning" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionJourney" asp-action="Edit">Edit</a>
                <a id="deleteBtn" asp-area="Administrator" asp-route-id="@item.Id" asp-controller="OptionJourney" asp-action="Delete" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        }
</table>
